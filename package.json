{
  "type": "module",
  "name": "sveltekit-omakase",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:push:remote": "NODE_ENV=production drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:remote": "NODE_ENV=production drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:clear": "vite-node --options.transformMode.ssr='/.*/' src/lib/db/clear",
    "db:studio": "drizzle-kit studio",
    "db:studio:remote": "NODE_ENV=production drizzle-kit studio",
    "test": "pnpm test:integration && pnpm test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin prettier-plugin-svelte . --check . && eslint .",
    "format": "prettier --write  --plugin prettier-plugin-svelte .",
    "test:integration": "pnpm db:clear && NODE_ENV=test playwright test",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@sveltejs/adapter-auto": "^3.2.5",
    "@sveltejs/kit": "^2.7.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.7.5",
    "autoprefixer": "^10.4.20",
    "bits-ui": "^0.21.16",
    "clsx": "^2.1.1",
    "cssnano": "^7.0.6",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.25.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44.1",
    "formsnap": "^1.0.1",
    "globals": "^15.11.0",
    "postcss": "^8.4.47",
    "postcss-load-config": "^5.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.7",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.5",
    "sveltekit-rate-limiter": "^0.6.1",
    "sveltekit-superforms": "^2.19.1",
    "tailwind-merge": "^2.5.3",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.13",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8",
    "vite-node": "^2.1.2",
    "vitest": "^2.1.2",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.670.0",
    "@aws-sdk/s3-request-presigner": "^3.670.0",
    "@libsql/client": "^0.14.0",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@lucia-auth/adapter-sqlite": "^3.0.2",
    "@sendgrid/mail": "^8.1.3",
    "drizzle-orm": "^0.34.1",
    "lucia": "^3.2.1",
    "mode-watcher": "^0.4.1",
    "nanoid": "^5.0.7",
    "oslo": "^1.2.1",
    "svelte-radix": "^1.1.1",
    "svelte-sonner": "^0.3.28",
    "sveltekit-flash-message": "^2.4.4",
    "svelty-email": "^0.0.11"
  }
}
