{
  "name": "sveltekit-omakase",
  "version": "4.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint . && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint:fix": "prettier --write . && eslint . --fix",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "test": "playwright test && vitest",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:clear": "vite-node --options.transformMode.ssr='/.*/' src/lib/db/clear",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.546.0",
    "@playwright/test": "^1.56.1",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.47.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.14",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.8.1",
    "bits-ui": "2.11.8",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "eslint-plugin-unicorn": "^61.0.2",
    "formsnap": "2.0.1",
    "globals": "^16.4.0",
    "lint-staged": "^16.2.4",
    "mode-watcher": "^1.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "simple-git-hooks": "^2.13.1",
    "svelte": "5.40.2",
    "svelte-check": "^4.3.3",
    "svelte-sonner": "^1.0.5",
    "sveltekit-flash-message": "^2.4.6",
    "sveltekit-rate-limiter": "^0.7.0",
    "sveltekit-superforms": "^2.27.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vite-node": "^3.2.4",
    "vitest": "^3.2.4",
    "zod": "4.1.12"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.911.0",
    "@aws-sdk/s3-request-presigner": "^3.911.0",
    "@libsql/client": "^0.15.15",
    "better-auth": "^1.3.27",
    "drizzle-orm": "^0.44.6",
    "mjml": "^4.16.1",
    "nanoid": "^5.1.6",
    "resend": "^6.1.3",
    "sailkit": "^0.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,svelte,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
