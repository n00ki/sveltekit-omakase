{
  "name": "sveltekit-omakase",
  "version": "4.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:drop": "drizzle-kit drop",
    "db:clear": "vite-node --options.transformMode.ssr='/.*/' src/lib/db/clear",
    "db:studio": "drizzle-kit studio",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:e2e": "pnpm db:clear && NODE_ENV=test playwright test",
    "test:unit": "vitest",
    "test": "pnpm test:e2e && pnpm test:unit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@internationalized/date": "^3.8.2",
    "@lucide/svelte": "^0.536.0",
    "@playwright/test": "^1.54.2",
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.27.0",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/table-core": "^8.21.3",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.1.0",
    "@vitest/browser": "^3.2.3",
    "bits-ui": "2.9.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "embla-carousel-svelte": "^8.6.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "formsnap": "2.0.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "layerchart": "2.0.0-next.27",
    "lint-staged": "^16.1.4",
    "mode-watcher": "^1.1.0",
    "paneforge": "1.0.2",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "5.37.3",
    "svelte-check": "^4.3.1",
    "svelte-sonner": "^1.0.5",
    "sveltekit-flash-message": "^2.4.6",
    "sveltekit-rate-limiter": "^0.7.0",
    "sveltekit-superforms": "^2.27.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^2.1.0",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vaul-svelte": "1.0.0-next.7",
    "vite": "^7.0.6",
    "vite-node": "^3.2.4",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.0.0",
    "zod": "^4.0.10"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/s3-request-presigner": "^3.859.0",
